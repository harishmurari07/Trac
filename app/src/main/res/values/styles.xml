<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/grey_gradient</item>
        <item name="android:text">@string/launcher_message</item>
    </style>

    <style name="ButtonDisableStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/button_status</item>
    </style>

</resources>
